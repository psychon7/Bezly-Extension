{
    "name": "Bezly",
    "version":"0.0.1",
    "description": "This is a review summarizer extension which will give you a shot and clean review of your amazon product",
    "action":{
        "default_title":"Bezly | The Ultimate Amazon Review Summarizer",
        "default_popup":"index.html"
    },
    "manifest_version":3,
    "background": {
        "service_worker": "./js/main.js"
      },
      "icons": {
        "16": "imgs/16x16.png",
        "32": "imgs/32x32.png",
        "48": "imgs/48x48.png",
        "128": "imgs/128x128.png"
      },
      "browser_action": {
        "default_icon": {
          "16": "imgs/16x16.png",
          "32": "imgs/32x32.png",
          "48": "imgs/48x48.png",
          "128": "imgs/128x128.png"
        }
      },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "http://api.bezly.xyz/*",
        "https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.js"
    ],"content_scripts": [
        {
          "matches": ["*://*/*"],
          "js": ["./js/content.js"]
        }
      ]
}